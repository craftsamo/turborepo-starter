{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "instructions": ["docs/instructions/*.md", "apps/**/AGENTS.md"],
  "permission": {
    "edit": "ask",
    "bash": {
      "sudo *": "deny",
      "wget *": "deny",
      "dd *": "deny",
      ":(){ :|:& }; *": "deny",
      "git add *": "deny",
      "git diff *": "allow",
      "git status *": "allow",
      "git log *": "allow",
      "*": "ask"
    }
  },
  "autoupdate": true
}
